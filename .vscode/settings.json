{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.o": true,
        "**/*.su": true,
        "**/*.cmd": true,
        /* 屏蔽不用的架构相关的文件 */
        "arch/alpha": true,
        "arch/arc": true,
        "arch/arm64": true,
        "arch/avr32": true,
        "arch/[b-z]*": true,
        "arch/arm/plat*": true,
        "arch/arm/mach-[a-h]*": true,
        "arch/arm/mach-[n-z]*": true,
        "arch/arm/mach-i[n-z]*": true,
        "arch/arm/mach-m[e-v]*": true,
        "arch/arm/mach-k*": true,
        "arch/arm/mach-l*": true,
        /* 屏蔽排除不用的配置文件 */
        "arch/arm/configs/[a-h]*": true,
        "arch/arm/configs/[j-z]*": true,
        "arch/arm/configs/imo*": true,
        "arch/arm/configs/in*": true,
        "arch/arm/configs/io*": true,
        "arch/arm/configs/ix*": true,
        /* 屏蔽掉不用的 DTB 文件 */
        "arch/arm/boot/dts/[^n]*": true,
        "arch/arm/boot/dts/nxp/imx/.*": true,
        "arch/arm/boot/dts/nxp/imx/[a-h]*": true,
        "arch/arm/boot/dts/nxp/imx/[k-z]*": true,
        "arch/arm/boot/dts/nxp/imx/in*": true,
        "arch/arm/boot/dts/nxp/imx/imx1*": true,
        "arch/arm/boot/dts/nxp/imx/imx7*": true,
        "arch/arm/boot/dts/nxp/imx/imx2*": true,
        "arch/arm/boot/dts/nxp/imx/imx3*": true,
        "arch/arm/boot/dts/nxp/imx/imx5*": true,
        "arch/arm/boot/dts/nxp/imx/imx6d*": true,
        "arch/arm/boot/dts/nxp/imx/imx6q*": true,
        "arch/arm/boot/dts/nxp/imx/imx6s*": true,
        "arch/arm/boot/dts/nxp/imx/imx6ull-9x9*": true,
        "arch/arm/boot/dts/nxp/imx/imx6ull-14x14-ddr*": true,
        "arch/arm/boot/dts/nxp/imx/imx6ulz*": true,
        "arch/arm/boot/dts/nxp/imx/imxr*": true,
        "arch/arm/boot/dts/nxp/imx/imx6-*": true,
    },
